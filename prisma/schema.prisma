generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                      Int      @id @default(autoincrement())
  sku                     String    @unique
  packageQuantity         Int
  shopifyLaggingStock     Int?
  shopifyCurrentStock     Int?
  boaGestaoCurrentStock   Int?
  fractionedQuantity      Int?
  inventoryItemId         String?
  isFractioned            Boolean?
  isZap                   Boolean?
  isPanebras              Boolean?

  @@map("products") // Maps the model to the "products" table in your database
}

model Order {
  id            Int         @id @default(autoincrement())
  dateTime      DateTime
  clientId      Int
  totalProducts Float
  total         Float
  items         OrderItem[]
}

model OrderItem {
  id         Int     @id @default(autoincrement())
  productId  String
  sku        String
  unity      String
  quantity   Int
  unityPrice Float
  totalItem  Float
  total      Float
  orderId    Int
  order      Order   @relation(fields: [orderId], references: [id])
}
